{
  "name": "top-150-leetcode",
  "version": "1.0.0",
  "description": "TypeScript playground for practicing top 150 LeetCode problems",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "list": "ts-node src/index.ts list",
    "dev": "ts-node src/index.ts",
    "dev:1": "nodemon --watch 'src/problems/**/1-*/dev.ts' --watch 'src/problems/**/1-*.ts' --ext ts --exec 'ts-node src/index.ts 1'",
    "dev:2": "nodemon --watch 'src/problems/**/2-*/dev.ts' --watch 'src/problems/**/2-*.ts' --ext ts --exec 'ts-node src/index.ts 2'",
    "dev:3": "nodemon --watch 'src/problems/**/3-*/dev.ts' --watch 'src/problems/**/3-*.ts' --ext ts --exec 'ts-node src/index.ts 3'",
    "dev:4": "nodemon --watch 'src/problems/**/4-*/dev.ts' --watch 'src/problems/**/4-*.ts' --ext ts --exec 'ts-node src/index.ts 4'",
    "dev:5": "nodemon --watch 'src/problems/**/5-*/dev.ts' --watch 'src/problems/**/5-*.ts' --ext ts --exec 'ts-node src/index.ts 5'",
    "dev:6": "nodemon --watch 'src/problems/**/6-*/dev.ts' --watch 'src/problems/**/6-*.ts' --ext ts --exec 'ts-node src/index.ts 6'",
    "dev:7": "nodemon --watch 'src/problems/**/7-*/dev.ts' --watch 'src/problems/**/7-*.ts' --ext ts --exec 'ts-node src/index.ts 7'",
    "dev:8": "nodemon --watch 'src/problems/**/8-*/dev.ts' --watch 'src/problems/**/8-*.ts' --ext ts --exec 'ts-node src/index.ts 8'",
    "dev:9": "nodemon --watch 'src/problems/**/9-*/dev.ts' --watch 'src/problems/**/9-*.ts' --ext ts --exec 'ts-node src/index.ts 9'",
    "test": "jest",
    "test:1": "jest --testPathPatterns=1-merge_sorted_array",
    "test:2": "jest --testPathPatterns=2-remove_element",
    "test:3": "jest --testPathPatterns=3-remove_duplicates_from_sorted_array",
    "test:4": "jest --testPathPatterns=4-remove_duplicates_from_sorted_array_II",
    "test:5": "jest --testPathPatterns=5-majority_element",
    "test:6": "jest --testPathPatterns=6-rotate_array",
    "test:7": "jest --testPathPatterns=7-best_time_to_buy_and_sell_stock",
    "test:8": "jest --testPathPatterns=8-best_time_to_buy_and_sell_stock_II",
    "test:9": "jest --testPathPatterns=9-jump_game",
    "test:watch": "jest --watch",
    "perf:1": "ts-node src/problems/array/1-merge_sorted_array/dev.performance.ts",
    "perf:2": "ts-node src/problems/array/2-remove_element/dev.performance.ts",
    "perf:3": "ts-node src/problems/array/3-remove_duplicates_from_sorted_array/dev.performance.ts",
    "perf:4": "ts-node src/problems/array/4-remove_duplicates_from_sorted_array_II/dev.performance.ts",
    "perf:5": "ts-node src/problems/array/5-majority_element/dev.performance.ts",
    "perf:6": "ts-node src/problems/array/6-rotate_array/dev.performance.ts",
    "perf:7": "ts-node src/problems/array/7-best_time_to_buy_and_sell_stock/dev.performance.ts",
    "perf:8": "ts-node src/problems/array/8-best_time_to_buy_and_sell_stock_II/dev.performance.ts",
    "perf:9": "ts-node -e \"require('./src/problems/array/9-jump_game/dev.ts').runTests()\"",
    "validate:1": "npm run test:1 && npm run perf:1",
    "validate:2": "npm run test:2 && npm run perf:2",
    "validate:3": "npm run test:3 && npm run perf:3",
    "validate:4": "npm run test:4 && npm run perf:4",
    "validate:5": "npm run test:5 && npm run perf:5",
    "validate:6": "npm run test:6 && npm run perf:6",
    "validate:7": "npm run test:7 && npm run perf:7",
    "validate:8": "npm run test:8 && npm run perf:8",
    "validate:9": "npm run test:9 && npm run perf:9"
  },
  "keywords": [
    "typescript",
    "leetcode",
    "algorithms",
    "data-structures"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.8.0",
    "benchmark": "^2.1.4",
    "cli-table3": "^0.6.5",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
